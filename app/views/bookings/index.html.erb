<div class="min-h-screen bg-gradient-to-br from-purple-900 via-blue-900 to-indigo-900 py-8 md:py-12">
  <div class="container mx-auto px-4">
    <%= link_to "â† Back to Home", root_path, class: "text-white hover:text-purple-300 mb-6 inline-block text-sm md:text-base" %>
    
    <div class="mb-6 md:mb-8">
      <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-2 md:mb-4">My Bookings</h1>
      <p class="text-gray-300 text-sm md:text-base">Manage your gaming sessions</p>
    </div>

    <!-- Upcoming Bookings -->
    <div class="mb-8 md:mb-12">
      <h2 class="text-xl md:text-2xl font-bold text-white mb-4 md:mb-6">Upcoming Sessions</h2>
      <% if @upcoming_bookings.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @upcoming_bookings.each do |booking| %>
            <div class="bg-white/10 backdrop-blur-lg rounded-lg p-6 hover:bg-white/20 transition duration-300">
              <!-- Status Badge -->
              <div class="flex justify-between items-start mb-4">
                <span class="px-3 py-1 rounded-full text-xs font-semibold <%= 
                  booking.status == 'confirmed' ? 'bg-green-600/50 text-green-100' : 'bg-yellow-600/50 text-yellow-100'
                %>">
                  <%= booking.status.titleize %>
                </span>
                <span class="text-gray-400 text-xs">
                  <%= time_ago_in_words(booking.start_time) %> from now
                </span>
              </div>

              <!-- Game -->
              <div class="mb-4">
                <div class="flex items-center mb-2">
                  <span class="text-2xl mr-2">ðŸŽ®</span>
                  <h3 class="text-xl font-bold text-white"><%= booking.game.name %></h3>
                </div>
                <p class="text-gray-400 text-sm"><%= booking.game.platform %></p>
              </div>

              <!-- Players -->
              <div class="mb-4 space-y-2">
                <div class="flex items-center text-sm">
                  <span class="text-gray-400 w-20">Booker:</span>
                  <span class="text-white font-semibold"><%= booking.user.username %></span>
                </div>
                <div class="flex items-center text-sm">
                  <span class="text-gray-400 w-20">Gamer:</span>
                  <span class="text-white font-semibold"><%= booking.gamer.username %></span>
                </div>
              </div>

              <!-- Date & Time -->
              <div class="bg-white/5 rounded-lg p-3 mb-4">
                <p class="text-gray-400 text-xs mb-1">Session Time</p>
                <p class="text-white font-semibold text-sm">
                  <%= booking.start_time.strftime("%b %d, %Y") %>
                </p>
                <p class="text-gray-300 text-sm">
                  <%= booking.start_time.strftime("%I:%M %p") %> - <%= booking.end_time.strftime("%I:%M %p") %>
                </p>
              </div>

              <!-- Actions -->
              <%= link_to "View Details", booking_path(booking), 
                  class: "block w-full text-center bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 rounded-lg transition duration-300" %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="bg-white/10 backdrop-blur-lg rounded-lg p-12 text-center">
          <p class="text-gray-400 text-lg mb-4">No upcoming bookings</p>
          <%= link_to "Browse Gamers", root_path, class: "bg-purple-600 hover:bg-purple-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-300 inline-block" %>
        </div>
      <% end %>
    </div>

    <!-- Past Bookings -->
    <div>
      <h2 class="text-2xl font-bold text-white mb-6">Past Sessions</h2>
      <% if @past_bookings.any? %>
        <div class="space-y-4">
          <% @past_bookings.each do |booking| %>
            <div class="bg-white/5 backdrop-blur-lg rounded-lg p-6 flex items-center justify-between hover:bg-white/10 transition duration-300">
              <div class="flex items-center flex-1">
                <div class="w-12 h-12 bg-gradient-to-br from-gray-600 to-gray-800 rounded-lg flex items-center justify-center text-2xl mr-4">
                  ðŸŽ®
                </div>
                <div>
                  <h3 class="text-white font-semibold"><%= booking.game.name %></h3>
                  <p class="text-gray-400 text-sm">
                    <%= booking.start_time.strftime("%b %d, %Y at %I:%M %p") %> with <%= booking.gamer.username %>
                  </p>
                </div>
              </div>
              <div class="flex items-center gap-4">
                <span class="px-3 py-1 rounded-full text-xs font-semibold <%= 
                  case booking.status
                  when 'completed' then 'bg-blue-600/50 text-blue-100'
                  when 'cancelled' then 'bg-red-600/50 text-red-100'
                  else 'bg-gray-600/50 text-gray-100'
                  end
                %>">
                  <%= booking.status.titleize %>
                </span>
                <%= link_to "View", booking_path(booking), class: "text-purple-400 hover:text-purple-300 font-semibold" %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="bg-white/5 backdrop-blur-lg rounded-lg p-8 text-center">
          <p class="text-gray-400">No past bookings yet</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
