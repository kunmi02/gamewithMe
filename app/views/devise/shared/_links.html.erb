<div class="space-y-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Already have an account? Log in", new_session_path(resource_name), class: "text-purple-300 hover:text-purple-200 transition duration-300" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Don't have an account? Sign up", new_registration_path(resource_name), class: "text-purple-300 hover:text-purple-200 transition duration-300" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="mt-4">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-gray-400 hover:text-gray-300 text-sm transition duration-300" %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-gray-400 hover:text-gray-300 text-sm transition duration-300" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-gray-400 hover:text-gray-300 text-sm transition duration-300" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full bg-white/10 hover:bg-white/20 text-white font-semibold py-2 px-4 rounded-lg transition duration-300 mt-4" %>
    <% end %>
  <% end %>
</div>
