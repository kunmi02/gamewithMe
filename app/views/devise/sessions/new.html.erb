<div class="min-h-screen bg-gradient-to-br from-purple-900 via-blue-900 to-indigo-900 flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full">
    <div class="bg-white/10 backdrop-blur-lg rounded-lg p-8 shadow-xl">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-white mb-2">Welcome Back!</h2>
        <p class="text-gray-300">Sign in to continue gaming</p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <div>
          <%= f.label :email, class: "block text-white font-semibold mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500",
              placeholder: "your@email.com" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-white font-semibold mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500",
              placeholder: "Enter your password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "w-4 h-4 text-purple-600 bg-white/10 border-white/20 rounded focus:ring-purple-500" %>
            <%= f.label :remember_me, class: "ml-2 text-gray-300" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Sign In", class: "w-full bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-bold py-3 px-6 rounded-lg transition duration-300 cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
