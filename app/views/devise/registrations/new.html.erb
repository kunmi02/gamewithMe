<div class="min-h-screen bg-gradient-to-br from-purple-900 via-blue-900 to-indigo-900 flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full">
    <div class="bg-white/10 backdrop-blur-lg rounded-lg p-8 shadow-xl">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-white mb-2">Join GameWithMe</h2>
        <p class="text-gray-300">Create your gaming profile</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "block text-white font-semibold mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500",
              placeholder: "your@email.com" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-white font-semibold mb-2" %>
          <% if @minimum_password_length %>
            <span class="text-gray-400 text-sm">(<%= @minimum_password_length %> characters minimum)</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500",
              placeholder: "Create a password" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-white font-semibold mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500",
              placeholder: "Confirm your password" %>
        </div>

        <div>
          <%= f.submit "Sign Up", class: "w-full bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-bold py-3 px-6 rounded-lg transition duration-300 cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
