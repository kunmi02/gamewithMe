<div class="min-h-screen bg-gradient-to-br from-purple-900 via-blue-900 to-indigo-900 py-12">
  <div class="container mx-auto px-4 max-w-3xl">
    <%= link_to "â† Back to Profile", user_path(@user), class: "text-white hover:text-purple-300 mb-6 inline-block" %>
    
    <div class="bg-white/10 backdrop-blur-lg rounded-lg p-8">
      <h1 class="text-3xl font-bold text-white mb-6">Edit Profile</h1>

      <%= form_with(model: @user, class: "space-y-6") do |form| %>
        <% if @user.errors.any? %>
          <div class="bg-red-500/20 border border-red-500 rounded-lg p-4">
            <h2 class="text-red-300 font-semibold mb-2"><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h2>
            <ul class="list-disc list-inside text-red-200 text-sm">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Basic Info -->
        <div class="space-y-4">
          <h2 class="text-xl font-bold text-white border-b border-white/20 pb-2">Basic Information</h2>
          
          <div>
            <%= form.label :username, class: "block text-white font-semibold mb-2" %>
            <%= form.text_field :username, 
                class: "w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white focus:outline-none focus:ring-2 focus:ring-purple-500" %>
          </div>

          <div>
            <%= form.label :email, class: "block text-white font-semibold mb-2" %>
            <%= form.email_field :email, 
                class: "w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white focus:outline-none focus:ring-2 focus:ring-purple-500" %>
          </div>

          <div>
            <%= form.label :timezone, class: "block text-white font-semibold mb-2" %>
            <%= form.select :timezone, 
                [
                  ['UTC', 'UTC'],
                  ['America/New_York', 'America/New_York'],
                  ['America/Chicago', 'America/Chicago'],
                  ['America/Los_Angeles', 'America/Los_Angeles'],
                  ['Europe/London', 'Europe/London'],
                  ['Europe/Paris', 'Europe/Paris'],
                  ['Asia/Tokyo', 'Asia/Tokyo'],
                  ['Australia/Sydney', 'Australia/Sydney']
                ],
                { include_blank: 'Select timezone...' },
                class: "w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white focus:outline-none focus:ring-2 focus:ring-purple-500" %>
          </div>

          <div>
            <%= form.label :bio, class: "block text-white font-semibold mb-2" %>
            <%= form.text_area :bio, rows: 4,
                placeholder: "Tell other gamers about yourself...",
                class: "w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
          </div>
        </div>

        <!-- Gaming Handles -->
        <div class="space-y-4">
          <h2 class="text-xl font-bold text-white border-b border-white/20 pb-2">Gaming Handles</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= form.label :psn_handle, "PlayStation Network", class: "block text-white font-semibold mb-2" %>
              <%= form.text_field :psn_handle, 
                  placeholder: "Your PSN ID",
                  class: "w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
            </div>

            <div>
              <%= form.label :xbox_handle, "Xbox Live", class: "block text-white font-semibold mb-2" %>
              <%= form.text_field :xbox_handle, 
                  placeholder: "Your Xbox Gamertag",
                  class: "w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
            </div>

            <div>
              <%= form.label :steam_handle, "Steam", class: "block text-white font-semibold mb-2" %>
              <%= form.text_field :steam_handle, 
                  placeholder: "Your Steam ID",
                  class: "w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
            </div>

            <div>
              <%= form.label :epic_handle, "Epic Games", class: "block text-white font-semibold mb-2" %>
              <%= form.text_field :epic_handle, 
                  placeholder: "Your Epic Games ID",
                  class: "w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500" %>
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div class="flex gap-4 pt-4">
          <%= form.submit "Save Changes", 
              class: "flex-1 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-bold py-3 px-6 rounded-lg transition duration-300 cursor-pointer" %>
          <%= link_to "Cancel", user_path(@user), 
              class: "bg-white/10 hover:bg-white/20 text-white font-semibold py-3 px-6 rounded-lg transition duration-300" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
