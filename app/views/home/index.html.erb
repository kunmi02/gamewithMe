<div class="min-h-screen bg-gradient-to-br from-purple-900 via-blue-900 to-indigo-900">
  <!-- Hero Section -->
  <div class="container mx-auto px-4 py-16">
    <div class="text-center mb-16">
      <h1 class="text-6xl font-bold text-white mb-6">
        GameWithMe
      </h1>
      <p class="text-2xl text-gray-300 mb-8">
        Book gaming sessions with players around the world
      </p>
      <p class="text-xl text-gray-400 mb-12">
        Like Calendly, but for gaming. Find your next FIFA opponent, Fortnite squad, or Call of Duty teammate.
      </p>
      <%= link_to "Browse Gamers", users_path, class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-4 px-8 rounded-lg text-lg transition duration-300" %>
    </div>

    <!-- Featured Gamers -->
    <div class="mb-16">
      <h2 class="text-3xl font-bold text-white mb-8">Featured Gamers</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @featured_gamers.each do |gamer| %>
          <div class="bg-white/10 backdrop-blur-lg rounded-lg p-6 hover:bg-white/20 transition duration-300">
            <div class="flex items-center mb-4">
              <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full flex items-center justify-center text-white text-2xl font-bold">
                <%= gamer.username.first.upcase %>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-bold text-white"><%= gamer.username %></h3>
                <p class="text-gray-400 text-sm"><%= gamer.timezone || 'UTC' %></p>
              </div>
            </div>
            <p class="text-gray-300 mb-4 line-clamp-2"><%= gamer.bio || 'No bio yet' %></p>
            <div class="flex flex-wrap gap-2 mb-4">
              <% gamer.games.limit(3).each do |game| %>
                <span class="bg-purple-600/50 text-white text-xs px-3 py-1 rounded-full"><%= game.name %></span>
              <% end %>
            </div>
            <%= link_to "View Profile", user_path(gamer), class: "block w-full text-center bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 rounded-lg transition duration-300" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Popular Games -->
    <div>
      <h2 class="text-3xl font-bold text-white mb-8">Popular Games</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-4 gap-4">
        <% @popular_games.each do |game| %>
          <div class="bg-white/10 backdrop-blur-lg rounded-lg p-4 hover:bg-white/20 transition duration-300 text-center">
            <div class="w-full h-32 bg-gradient-to-br from-blue-500 to-purple-500 rounded-lg mb-3 flex items-center justify-center">
              <span class="text-4xl">ðŸŽ®</span>
            </div>
            <h3 class="text-white font-bold mb-1"><%= game.name %></h3>
            <p class="text-gray-400 text-sm"><%= game.platform %></p>
            <p class="text-purple-400 text-xs mt-2"><%= pluralize(game.users.count, 'player') %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- How It Works -->
  <div class="bg-black/30 py-16 mt-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-white text-center mb-12">How It Works</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-20 h-20 bg-purple-600 rounded-full flex items-center justify-center text-white text-3xl mx-auto mb-4">1</div>
          <h3 class="text-xl font-bold text-white mb-2">Browse Gamers</h3>
          <p class="text-gray-400">Find players who play your favorite games</p>
        </div>
        <div class="text-center">
          <div class="w-20 h-20 bg-purple-600 rounded-full flex items-center justify-center text-white text-3xl mx-auto mb-4">2</div>
          <h3 class="text-xl font-bold text-white mb-2">Book a Session</h3>
          <p class="text-gray-400">Pick a time slot that works for both of you</p>
        </div>
        <div class="text-center">
          <div class="w-20 h-20 bg-purple-600 rounded-full flex items-center justify-center text-white text-3xl mx-auto mb-4">3</div>
          <h3 class="text-xl font-bold text-white mb-2">Play Together</h3>
          <p class="text-gray-400">Connect and enjoy your gaming session</p>
        </div>
      </div>
    </div>
  </div>
</div>
